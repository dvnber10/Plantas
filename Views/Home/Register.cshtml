@page "/register"
@* modulo para agregar plantas enfermedades o familias *@
<div class="box-container-row">
    <h2>Register new</h2>
    <form method="POST" enctype="multipart/form-data" action="/Home/Register">
        <div class="title">
            <input type="text" placeholder="Name and scientific name" name="Name" id="plantName" onblur="formatPlantName()" required>
        </div>
        <div class="choose">
            <div class="opcion">
                <input type="radio" name="DataType" value="family" id="family"><span onClick="chequea('family'); updateContent('family')"> Family</span>
            </div>
            <div class="opcion">
                <input type="radio" name="DataType" value="plant" id="plant" checked><span onClick="chequea('plant'); updateContent('plant')"> Plant</span>
            </div>
            <div class="opcion">
                <input type="radio" name="DataType" value="disease" id="disease"><span onClick="chequea('disease'); updateContent('disease')"> Disease</span>
            </div>

        </div>

        <div class="box-container">
            <div class="box-description">
                <h3>Description</h3>
                <textarea name="Description" id="" required
                    placeholder="Aqui es donde se agrega la informacio principal de la planta o enfermedad"></textarea>
            </div>
            <div class="box-image">
                <div class="image-principal">
                    <img id="image"
                        src="https://www.comparapps.com/wp-content/uploads/2020/03/imagenes-para-paginas-web.png"
                        alt="">
                    <input type="file" name="Image" id="" required>
                </div>

                <div class="enfermedades">

                </div>
                <div id="muestra"> </div>
            </div>
        </div>
        <div class="box-botton">
            <input type="submit" value="Guardar">
        </div>
    </form>
</div>


<script>
    // Esta funcion hace que el radio sea true cuando se le de click a el label 
    function chequea(radio) {
        document.getElementById(radio).checked = true;
    }

    function updateContent(type) {
    // Seleccionar el div "muestra"
    var muestraDiv = document.getElementById("muestra");
    
    // Cambiar el contenido dependiendo del valor seleccionado
    switch(type) {
        case 'family':
            muestraDiv.innerHTML = "<p>Information about Family</p>";
            break;
        case 'plant':
            muestraDiv.innerHTML = "<p>Information about Plants</p>";
            break;
        case 'disease':
            muestraDiv.innerHTML = "<p>Information about Diseases</p>";
            break;
        default:
            muestraDiv.innerHTML = "<p>Select an option</p>";
    }
}

function formatPlantName() {
    var input = document.getElementById('plantName');
    input.value = capitalizeFirstLetter(input.value);
}

function capitalizeFirstLetter(string) {
    return string.charAt(0).toUpperCase() + string.slice(1).toLowerCase();
}

window.onload = function() {
    updateContent('plant'); // Mostrar "Plant" por defecto
};
</script>

